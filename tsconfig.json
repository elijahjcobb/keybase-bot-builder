{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"sourceMap": true,
		"noEmitOnError": false,
		"moduleResolution": "node",
		"outDir": "js",
		"declarationDir": "dts",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"ts"
	]
}